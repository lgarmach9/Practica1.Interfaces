    private void jComboBox1ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        String seleccion = String.valueOf(jComboBox1.getSelectedItem());
        System.out.println(""+seleccion);
        
        switch (seleccion){
                case "Dolares" -> {
                    Double dolar=  Double.valueOf(jTextField1.getText());
                    Double conversionDolar= dolar * (1.6);
                    jTextField2.setText(String.valueOf(conversionDolar));
            }
                case "Libras" -> {
                    Double libra=  Double.valueOf(jTextField1.getText());
                    Double conversionLibra= libra * (0.87);
                    jTextField2.setText(String.valueOf(conversionLibra));
            }
                case "Yen" -> {
                    Double yen=  Double.valueOf(jTextField1.getText());
                    Double conversionYen= yen * (160.16);
                    jTextField2.setText(String.valueOf(conversionYen));
            }
                case "Franco suizo" -> {
                    Double franco=  Double.valueOf(jTextField1.getText());
                    Double conversionFranco= franco * (0.96);
                    jTextField2.setText(String.valueOf(conversionFranco));
            }
        default -> {
            }
        }
                    
    }                                          

